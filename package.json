        "eslint-plugin-standard": "^5.0.0",
        "npm-run-all": "^4.1.5",
        "postcss-cli": "^8.3.0",
        "postcss-fontpath": "^1.0.0",
        "posthtml-expressions": "^1.7.0",
        "posthtml-include": "^1.6.0",
