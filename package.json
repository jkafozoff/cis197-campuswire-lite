        "react-router-dom": "^6.0.2",
        "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.2.0",
        "babel-eslint": "^10.1.0"
    },
    "devDependencies": {
        "@fullhuman/postcss-purgecss": "^3.0.0",
