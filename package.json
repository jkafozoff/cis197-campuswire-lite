    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "postcss:watch": "postcss frontend/src/assets/css/index.pcss -o frontend/src/assets/css/index.css --env development -w",
        "postcss:build": "postcss frontend/src/assets/css/index.pcss -o frontend/src/assets/css/index.css --env production",
        "parcel:serve": "parcel frontend/src/index.html",
        "parcel:watch": "parcel watch frontend/src/index.html",
        "parcel:build": "parcel build frontend/src/index.html",
        "server": "node backend/server.js",
        "clean": "rm -rf dist .cache",
        "build": "npm-run-all -s clean postcss:build parcel:build",
        "start": "npm-run-all -s clean -p postcss:watch parcel:watch server",
        "lint": "node ./script/lint",
        "zip": "node ./script/zip"
